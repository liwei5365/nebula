    <build>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
            <resource>
                <directory>${project.basedir}/src/main/filtered-resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <useDefaultDelimiters>false</useDefaultDelimiters>
                    <delimiters>
                        <delimiter>${*}</delimiter>
                    </delimiters>
                </configuration>
                <executions>
                    <execution>
                        <id>filter</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin> 
                   
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>javax.validation</groupId>
                                    <artifactId>validation-api</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.hibernate</groupId>
                                    <artifactId>hibernate-validator</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
        
                                <artifactItem>
                                    <groupId>com.fasterxml</groupId>
                                    <artifactId>classmate</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss</groupId> 
                                    <artifactId>com.springsource.org.jboss.jandex</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.logging</groupId>
                                    <artifactId>jboss-logging</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.servicemix.bundles</groupId>
                                    <artifactId>org.apache.servicemix.bundles.ant</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.servicemix.bundles</groupId>
                                    <artifactId>org.apache.servicemix.bundles.antlr</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.servicemix.bundles</groupId>
                                    <artifactId>org.apache.servicemix.bundles.dom4j</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.javassist</groupId>
                                    <artifactId>com.springsource.javassist</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>
                                
                                <!--
                                <artifactItem>
                                    <groupId>org.hibernate.common</groupId>
                                    <artifactId>com.springsource.org.hibernate.annotations.common</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>                                
                                <artifactItem>
                                    <groupId>org.hibernate</groupId>
                                    <artifactId>com.springsource.org.hibernate.ejb</artifactId>
                                    <outputDirectory>target/classes/resources/repository/usr</outputDirectory>
                                </artifactItem>                                
