<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ossu.nebula.virgo</groupId>
        <artifactId>virgo</artifactId>
        <version>2.0.0-SNAPSHOT</version>
        <relativePath>../..</relativePath>
    </parent>
    <artifactId>org.eclipse.virgo.kernel.dmfragment</artifactId>
    <packaging>bundle</packaging>
    <name>org.eclipse.virgo.kernel.dmfragment</name>

    <dependencies>
        <dependency>
            <groupId>ossu.nebula.virgo</groupId>
            <artifactId>org.eclipse.virgo.nano.core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ossu.nebula.virgo</groupId>
            <artifactId>org.eclipse.virgo.kernel.osgi</artifactId>
            <version>${project.version}</version>
        </dependency>        
        <dependency>
            <groupId>org.eclipse.gemini.blueprint</groupId>
            <artifactId>gemini-blueprint-extender</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
               
    </dependencies>   
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Fragment-Host>org.eclipse.gemini.blueprint.extender</Fragment-Host>
                        <Import-Package>
                            org.eclipse.virgo.kernel.agent.dm;version="${project.version}",
                            org.eclipse.virgo.nano.shim.serviceability;version="${project.version}",
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build> 
</project>
