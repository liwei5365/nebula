<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ossu.nebula.virgo</groupId>
        <artifactId>virgo</artifactId>
        <version>2.0.0-SNAPSHOT</version>
        <relativePath>../..</relativePath>
    </parent>
    <artifactId>org.eclipse.virgo.shell.command</artifactId>
    <packaging>bundle</packaging>
    <name>org.eclipse.virgo.shell.command</name>

    <dependencies>
        <dependency>
            <groupId>ossu.nebula.virgo</groupId>
            <artifactId>org.eclipse.virgo.medic</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ossu.nebula.virgo</groupId>
            <artifactId>org.eclipse.virgo.kernel.osgi</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ossu.nebula.virgo</groupId>
            <artifactId>org.eclipse.virgo.kernel.model</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ossu.nebula.virgo</groupId>
            <artifactId>org.eclipse.virgo.kernel.deployer</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf.shell</groupId>
            <artifactId>org.apache.karaf.shell.console</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.equinox</groupId>
            <artifactId>org.eclipse.equinox.region</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.tycho</groupId>
            <artifactId>org.eclipse.osgi</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.easymock</groupId>
            <artifactId>easymock</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ossu.nebula.virgo</groupId>
            <artifactId>org.eclipse.virgo.test.stubs</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-Activator>org.eclipse.virgo.shell.osgicommand.Activator</Bundle-Activator>
                        <Export-Package>org.eclipse.virgo.shell.osgicommand.helper.*;version="${project.version}"</Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
