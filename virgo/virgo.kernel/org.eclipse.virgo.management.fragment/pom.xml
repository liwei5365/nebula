<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ossu.nebula.virgo</groupId>
        <artifactId>virgo</artifactId>
        <version>2.0.0-SNAPSHOT</version>
        <relativePath>../..</relativePath>
    </parent>
    <artifactId>org.eclipse.virgo.management.fragment</artifactId>
    <packaging>bundle</packaging>
    <name>org.eclipse.virgo.management.fragment</name>
    
    <dependencies>
        <dependency>
            <groupId>org.eclipse.gemini.management</groupId>
            <artifactId>org.eclipse.gemini.management</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.equinox</groupId>
            <artifactId>org.eclipse.equinox.region</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.easymock</groupId>
            <artifactId>easymock</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Fragment-Host>org.eclipse.gemini.management;bundle-version="[1.0.5,1.1)"</Fragment-Host>
                        <Import-Package>
                            javax.management;version="0",
                            org.eclipse.equinox.region;version="[1.1.0,1.2)",
                            org.eclipse.gemini.management;resolution:=optional,
                            org.osgi.framework;version="0"
                        </Import-Package>                        
                        <GeminiManagement-ObjectNameTranslator>org.eclipse.virgo.management.fragment.VirgoObjectNameTranslator</GeminiManagement-ObjectNameTranslator>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
</project>
